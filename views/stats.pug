extends layout

block content
	- const truncateString = (str, num) => str.length > num ? str.slice(0, num > 3 ? num - 3 : num) + '...' : str;
	section.hero.is-primary.is-bold
		.hero-body
			.container
				h1.title URL Shorten Stats
				h2.subtitle Click counts.
	.container
		table.table.is-bordered.is-striped
			tbody
			each val,ind in stats
				tr
					th Index
					td= ind
					th Long URL
					td
						a(href= val.long_url title= val.long_url)= truncateString(val.long_url, 20)
					th Short URL
						td
							a(href= domain + "/s/" + val._id)= domain + "/s/" + val._id
					th ID
					td= val._id
					th Click Count
					td= val.click_count
					th Created At
					td= val.created_at
				//#{ind + 1} #{val._id} - #{val.click_count} clicks
